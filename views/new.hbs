
<form class="mt-5 w-75 mx-auto" action="/restaurants" method="POST">

  <h3 class="mb-5 row justify-content-center">新增餐廳</h3>

  {{!-- Name --}}
	<div class="mb-3 row justify-content-center">
		<label for="name" class="col-form-label col-2">店名：</label>
    <div class="col-8">
      <input type="text" class="form-control" id="name" name="name" placeholder="Sababa 沙巴巴中東美食" required/>
    </div>
	</div>

  {{!-- English Name --}}
	<div class="mb-3 row justify-content-center">
		<label for="nameEn" class="col-form-label col-2">英文店名：</label>
    <div class="col-8">
      <input type="text" class="form-control" id="nameEn" name="nameEn" placeholder="Sababa Pita Bar"/>
    </div>
	</div>

  {{!-- Category --}}
	<div class="mb-3 row justify-content-center">  
		<label for="category" class="col-form-label col-2">類別：</label>
    <div class="col-8">
      <input list="categories" class="form-control" id="category" name="category" placeholder="中東料理" required/>
      <datalist id="categories">
        <option>中東料理</option>
        <option>日本料理</option>
        <option>義式餐廳</option>
        <option>美式</option>
        <option>咖啡</option>
        <option>酒吧</option>
      </datalist>
    </div>
	</div>

  {{!-- Image --}}
	<div class="mb-3 row justify-content-center">
		<label for="image" class="col-form-label col-2">照片：</label>
    <div class="col-8">
      <input type="url" class="form-control" id="image" name="image" placeholder="https://assets-lighthouse.s3.amazonaws.com/uploads/image/file/5635/01.jpg" required/>
    </div>
	</div>

  {{!-- Location --}}
	<div class="mb-3 row justify-content-center">
		<label for="location" class="col-form-label col-2">地址：</label>
    <div class="col-8">
      <input type="text" class="form-control" id="location" name="location" placeholder="台北市羅斯福路三段 283 巷 17 號" required/>
    </div>
	</div>

  {{!-- Phone --}}
	<div class="mb-3 row justify-content-center">
		<label for="phone" class="col-form-label col-2">電話：</label>
    <div class="col-8">
      <input type="tel" class="form-control" id="phone" name="phone" placeholder="02 2363 8009" required/>
    </div>
	</div>

  {{!-- Google map --}}
	<div class="mb-3 row justify-content-center">
		<label for="googleMap" class="col-form-label col-2">Google Map：</label>
    <div class="col-8">
      <input type="url" class="form-control" id="googleMap" name="googleMap" placeholder="https://goo.gl/maps/BJdmLuVdDbw" required/>
    </div>
	</div>

  {{!-- Rating --}}
	<div class="mb-3 row justify-content-center">
		<label for="rating" class="col-form-label col-2">評分：</label>
    <div class="col-8">
      <input type="number" class="form-control" id="rating" name="rating" max="5" min="0" step="0.1" placeholder="4.1" required/>
    </div>
	</div>

  {{!-- Description --}}
	<div class="mb-3 row justify-content-center">
		<label for="description" class="col-form-label col-2">介紹：</label>
    <div class="col-8">
      <textarea type="url" class="form-control" id="description" name="description" placeholder="沙巴巴批塔是台灣第一家純手工批塔專賣店,只選用最新鮮的頂級原料,以及道地的中東家傳配方。" required/></textarea>
    </div>
	</div>

  {{!-- Button --}}
  <div class="row my-3 save-button justify-content-end">
    <button type="submit" class="btn btn-primary">儲存</button>
  </div>
</form>
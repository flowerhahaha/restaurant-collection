<div class="row mt-5">
  <div class="col-md-5 m-auto">
    <div class="card card-body">
      <h1 class="text-center mt-3">Login</h1> 
      {{> message}}
      <form action="/users/login" method="POST">
        <div class="mb-3">
          <label for="email" class="mb-2">Email</label>
          <input type="email" id="email" name="email" class="form-control" placeholder="Enter Email" required value="user1@example.com">
        </div>
        <div class="mb-3">
          <label for="password" class="mb-2">Password</label>
          <input type="password" id="password" name="password" class="form-control" placeholder="Enter Password" required value="12345678">
        </div>
        <button type="submit" class="btn btn-primary btn-block" style="line-height: 20px;">Login</button>
        <a href="/auth/facebook" class="btn btn-block loginBtn loginBtn-facebook mt-3">
          Login with Facebook 
        </a>
        <a href="/auth/google" class="btn btn-block loginBtn loginBtn-google mt-3">
          Login with Google
        </a>
      </form>
      <p class="mt-4">
        No Account? <a href="/users/register">Register</a>
      </p>
    </div>
  </div>
</div>
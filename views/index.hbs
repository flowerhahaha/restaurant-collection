<!-- search bar -->
<div class="container search-bar">
  <div class="search-bar-outer">
    <div class="search-bar-inner">
      <form action="/search" method="GET">
        <h4 class="mb-2">尋找餐廳：</h4>
        <div class="input-group">
          <!-- input -->
          <input type="text" name="keyword" {{#if keyword}} value={{ keyword }} {{/if}} class="form-control" placeholder="輸入餐廳名稱或類別" aria-label="Restaurant name or category" aria-describedby="search-button">
          <div class="input-group-append">
          <button class="btn btn-major" type="submit" id="search-button"><i class="fas fa-search"></i></button>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>

{{#if notFound}}
<div class="alert alert-danger mt-3 mx-auto" role="alert">
  找不到符合條件的餐廳，請重新輸入
</div>
{{/if}}

<!-- restaurant list -->
<div class="container mt-5">
  <div class="row">
    <div class="col-md-10 col-12 mx-auto">
      <div class="card-columns">
        {{#each restaurantList}}
        <a href="/restaurants/{{ this._id }}" class="text-secondary">
          <div class="card mb-3">
            <img class="card-img-top" src={{ this.image }} alt={{ this.name }}>
            <div class="card-body p-3">
              <h6 class="card-title mb-1">{{ this.name }}</h6>

              <div class="restaurant-category mb-1">
                <i class="fas fa-utensils pr-2"></i>{{ this.category }}
              </div>
              <span class="badge badge-pill badge-danger font-weight-normal">
                {{ this.rating }}
                <i class="fas fa-star fa-xs"></i>
              </span>
            </div>
          </div>
        </a>
        {{/each}}
      </div>
    </div>
  </div>
</div>

<script>
  // maintain scroll position after form submit
  document.addEventListener("DOMContentLoaded", function() {
    if (localStorage.getItem('myRestaurant') !== null) {
      window.scrollTo({
        top: localStorage.getItem('myRestaurant'),
        behavior: "smooth"
      })
    }
  })
  // store scroll position
  document.addEventListener('scroll', function() {
    localStorage.setItem('myRestaurant', window.pageYOffset)
  })
</script>